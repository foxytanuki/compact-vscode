{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Compact",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.compact",
          "begin": "//",
          "end": "$",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.compact"
            }
          }
        },
        {
          "name": "comment.block.compact",
          "begin": "/\\*",
          "end": "\\*/",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.begin.compact"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.end.compact"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.compact",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.compact"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.compact"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.compact",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.compact",
          "begin": "'",
          "end": "'",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.compact"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.compact"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.compact",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.other.compact",
          "begin": "<",
          "end": ">",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.compact"
            }
          },
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.compact"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.compact",
          "match": "\\b(pragma|import|export|module|ledger|circuit|witness|contract|struct|enum|constructor|assert|const|default|map|fold|disclose|pad|prefix|as)\\b"
        },
        {
          "name": "keyword.control.conditional.compact",
          "match": "\\b(if|else)\\b"
        },
        {
          "name": "keyword.control.repeat.compact",
          "match": "\\b(for|of)\\b"
        },
        {
          "name": "keyword.control.return.compact",
          "match": "\\breturn\\b"
        },
        {
          "name": "storage.modifier.compact",
          "match": "\\b(pure|sealed)\\b"
        },
        {
          "name": "keyword.operator.word.compact",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.builtin.compact",
          "match": "\\b(Boolean|Field|Bytes|Opaque|Vector)\\b"
        },
        {
          "name": "storage.type.builtin.compact",
          "begin": "\\bUint\\b",
          "end": "(?=\\s|;|,|\\)|\\]|\\}|$|\\n)",
          "beginCaptures": {
            "0": {
              "name": "storage.type.builtin.compact"
            }
          },
          "patterns": [
            {
              "name": "meta.type.parameters.compact",
              "begin": "<",
              "end": ">",
              "beginCaptures": {
                "0": {
                  "name": "punctuation.definition.type.parameters.begin.compact"
                }
              },
              "endCaptures": {
                "0": {
                  "name": "punctuation.definition.type.parameters.end.compact"
                }
              },
              "patterns": [
                {
                  "include": "#literals"
                },
                {
                  "include": "#punctuation"
                }
              ]
            }
          ]
        },
        {
          "name": "storage.type.compact",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.compact",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        },
        {
          "name": "constant.numeric.hex.compact",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.version.compact",
          "match": "\\b[0-9]+\\.[0-9]+(\\.[0-9]+)*\\b"
        },
        {
          "name": "constant.language.boolean.true.compact",
          "match": "\\btrue\\b"
        },
        {
          "name": "constant.language.boolean.false.compact",
          "match": "\\bfalse\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.compact",
          "match": "(=|\\+=|-=)"
        },
        {
          "name": "keyword.operator.comparison.compact",
          "match": "(==|!=|>=|<=|>|<)"
        },
        {
          "name": "keyword.operator.arithmetic.compact",
          "match": "(\\+|\\-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.logical.compact",
          "match": "(&&|\\|\\|)"
        },
        {
          "name": "keyword.operator.other.compact",
          "match": "(=>|\\?|\\.\\.\\.|\\.\\.|:|\\.)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.statement.compact",
          "match": ";"
        },
        {
          "name": "punctuation.separator.compact",
          "match": ","
        },
        {
          "name": "punctuation.bracket.round.compact",
          "match": "[()]"
        },
        {
          "name": "punctuation.bracket.square.compact",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.bracket.curly.compact",
          "match": "[{}]"
        }
      ]
    }
  },
  "scopeName": "source.compact"
}
