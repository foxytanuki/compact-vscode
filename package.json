{
    "name": "compact-vscode",
    "displayName": "Compact Language Support",
    "description": "Language support for Compact smart contract language (Midnight network)",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "compact",
        "midnight",
        "smart-contract",
        "blockchain"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "compact",
                "aliases": [
                    "Compact",
                    "compact"
                ],
                "extensions": [
                    ".compact"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Compact Language",
            "properties": {
                "compact.lsp.path": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the compact-lsp binary. If empty, the extension will try to find it automatically."
                },
                "compact.lsp.trace": {
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "bun run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "bun run compile && bun run lint",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write .",
        "test": "bun run ./out/test/runTest.js"
    },
    "devDependencies": {
        "@biomejs/biome": "latest",
        "@types/node": "^25.0.3",
        "@types/vscode": "^1.107.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    }
}
