{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [["{", "}"], ["[", "]"], ["(", ")"], ["<", ">"]],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "<", "close": ">" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "surroundingPairs": [["{", "}"], ["[", "]"], ["(", ")"], ["<", ">"], ["\"", "\""], ["'", "'"]],
    "folding": {
        "markers": {
            "start": "^\\s*//\\s*#?region\\b",
            "end": "^\\s*//\\s*#?endregion\\b"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^((?!.*?/\\*).*)*\\{[^}]*$|^((?!.*?/\\*).*)*\\[[^\\]]*$|^((?!.*?/\\*).*)*\\([^)]*$|^\\s*(else|elseif|catch|finally)\\b",
        "decreaseIndentPattern": "^((?!.*?/\\*).*)*\\}[^}]*$|^((?!.*?/\\*).*)*\\][^\\]]*$|^((?!.*?/\\*).*)*\\)[^)]*$|^\\s*(else|elseif|catch|finally)\\b"
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "onEnterRules": [
        {
            "beforeText": "^\\s*//.*",
            "action": {
                "indent": "none",
                "appendText": "// "
            }
        },
        {
            "beforeText": "^\\s*\\{",
            "afterText": "^\\s*\\}",
            "action": {
                "indent": "indent",
                "indentAction": "indentOutdent",
                "appendText": "    "
            }
        },
        {
            "beforeText": "^\\s*\\[",
            "afterText": "^\\s*\\]",
            "action": {
                "indent": "indent",
                "indentAction": "indentOutdent",
                "appendText": "    "
            }
        },
        {
            "beforeText": "^\\s*\\(",
            "afterText": "^\\s*\\)",
            "action": {
                "indent": "indent",
                "indentAction": "indentOutdent",
                "appendText": "    "
            }
        }
    ]
}
